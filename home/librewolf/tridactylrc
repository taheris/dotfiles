" delete existing
sanitize tridactyllocal tridactylsync

" interface
colorscheme dark
set editorcmd auto
set newtab about:blank
set smoothscroll true

" use native
unbind <C-b>
unbind <C-f>
unbind <C-e>

" movement
bind j scrollline 10
bind k scrollline -10
bind d scrollpage +0.5
bind u scrollpage -0.5
bind x tabclose
bind X undo
unbind D
bind <C-j> tabmove -1
bind <C-k> tabmove +1
bind J tabprev
bind K tabnext
bind <C-i> mode ignore
bind / fillcmdline find
bind ? fillcmdline find -?
bind n findnext +1
bind N findnext -1
bind ,<Space> nohlsearch

" go to
bind gd tabdetach
bind gD composite tabduplicate; tabdetach

" Suspend all tabs in one go
command discardall jsb browser.tabs.query({}).then(ts => browser.tabs.discard(ts.map(t=>t.id)))

" search
set searchurls.@no https://search.nixos.org/options?type=options&query=
set searchurls.@np https://search.nixos.org/packages?type=packages&query=
set searchurls.@nw https://wiki.nixos.org/w/index.php?search=
set searchurls.@now https://nixos.wiki/index.php?search=
set searchurls.@hmo https://home-manager-options.extranix.com?query=
set searchurls.@melpa https://melpa.org/#/?q=
